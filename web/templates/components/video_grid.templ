package components

import "musiq/models"
import "fmt"

templ VideoGrid(videos []models.VideoResult) {
	if len(videos) > 0 {
		<div class="mb-4">
			<span class="neo-tag bg-neo-yellow">{ fmt.Sprintf("%d results", len(videos)) }</span>
		</div>
		<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
			for _, video := range videos {
				@VideoCard(video)
			}
		</div>
	} else {
		<div class="neo-card p-12 text-center">
			<div class="text-6xl mb-4">ğŸ”</div>
			<h3 class="text-xl font-bold mb-2">No Results Found</h3>
			<p class="text-gray-600">Try a different search term</p>
		</div>
	}
}
